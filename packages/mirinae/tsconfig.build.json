{
  "compilerOptions": {
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "outDir": "types",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./src/**/*.stories.ts",
    "./src/**/story-helper.ts",
    "./src/**/mock.ts",
    "./**/__tests__/**/*.ts"
  ]
}
