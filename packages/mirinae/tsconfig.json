{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [ "./**/*.ts", "./**/*.tsx", "./**/*.vue" ],
  "exclude": [
    "node_modules",
    "dist",
    ".out"
  ]
}